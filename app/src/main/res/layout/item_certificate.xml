<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Certificate Image -->
        <ImageView
            android:id="@+id/imgCertificate"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/sample_certificate2"
            android:adjustViewBounds="true" />

        <!-- Overlay with title and description -->
        <LinearLayout
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imgCertificate"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#AA000000">

            <TextView
                android:id="@+id/tvCertificateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Certificate 1"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCertificateDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#DDDDDD"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
