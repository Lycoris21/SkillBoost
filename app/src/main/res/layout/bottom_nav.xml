<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="bottom"
    android:layout_marginHorizontal="-16dp"
    android:layout_marginBottom="-16dp"
    android:padding="0dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="8dp"
    android:background="@drawable/bg_nav_top_rounded"
    android:clipChildren="false"
    android:clipToPadding="false">


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4">

        <!-- Home (Selected) -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/nav_home"
                android:background="@drawable/bg_selected_nav_item"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/nav_selected_home"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>
            </LinearLayout>


        </LinearLayout>

        <!-- Courses -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/nav_courses"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/nav_courses"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Courses"
                android:textColor="#7B6F8E"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Badges -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/nav_badges"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/nav_badges"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Badges"
                android:textColor="#7B6F8E"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/nav_profile"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/nav_profile"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="#7B6F8E"
                android:textSize="12sp"/>
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
